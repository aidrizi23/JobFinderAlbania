@model JobFinderAlbania.Models.Service.ServiceForCreationDto

@{
    ViewData["Title"] = "Create Service";
}

<h2>Create Service</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DeliveryTime" class="form-label"></label>
        <input asp-for="DeliveryTime" class="form-control" type="number" required />
        <span asp-validation-for="DeliveryTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Revisions" class="form-label"></label>
        <input asp-for="Revisions" class="form-control" type="number" required />
        <span asp-validation-for="Revisions" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Tags" class="form-label"></label>
        <input asp-for="Tags" class="form-control" />
        <span asp-validation-for="Tags" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label"></label>
        <input asp-for="Image" class="form-control"  />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Service</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
