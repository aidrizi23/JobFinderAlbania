@model JobFinderAlbania.Models.Seller.SellerDetailsViewModel

@{
    ViewBag.Title = "Seller Details";
}

<h2>Seller Details</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.FirstName @Model.LastName</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="@Url.Content(Model.ProfilePicture)" alt="Profile Picture" class="img-fluid rounded-circle" />
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Phone Number:</dt>
                    <dd class="col-sm-9">@Model.PhoneNumber</dd>

                    <dt class="col-sm-3">Bio:</dt>
                    <dd class="col-sm-9">@Model.Bio</dd>

                    <dt class="col-sm-3">Education:</dt>
                    <dd class="col-sm-9">@Model.Education</dd>

                    <dt class="col-sm-3">Education:</dt>
                    <dd class="col-sm-9">@Model.JoinDate</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">Back to Sellers</a>
    </div>
</div>